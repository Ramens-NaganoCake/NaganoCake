<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3 class="head-line">ジャンル一覧・追加</h3>
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <p>ジャンル名 <%= f.text_field :name %> <%= f.submit '新規登録', class: "glyphicon glyphicon-pencil btn btn-success" %></p>
      <% end %>
      <div class="col-xs-8 col-xs-offset-2">
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            <tr/>
          </thead>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "glyphicon glyphicon-pencil btn btn-success" %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>