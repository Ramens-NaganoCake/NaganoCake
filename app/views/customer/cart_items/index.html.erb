<div class="container px-5 px-md-0 mt-5">

<div class="row" style="margin-left: 0; margin-right: 0;">
<h3 class="d-inline" style="margin-bottom: 0;">ショッピングカート</h3>
<%= link_to "カートを空にする", customer_cart_item_all_destroy_path, method: :delete, class: "btn btn-danger d-inline ml-auto" %>
</div>

<div class="cart-items-index">
  <table class="mt-5 mb-5 table table-bordered border-dark">
    <thead>
      <tr class="table-active">
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= tax_price(cart_item.item.price).to_s(:delimited) %></td>
        <td>
          <%= form_with model: cart_item, url: customer_cart_item_path(cart_item), method: :patch, class: "text-center", local: true do |f| %>
            <%= f.number_field :quantity, min: 1, class: "cart-item-quantity-field" %>
            <%= f.submit "変更", class: "btn btn-success" %>
          <% end %>
        </td>
        <td><%= sub_price(cart_item).to_s(:delimited) %></td>
        <td class="text-center"><%= link_to "削除する", customer_cart_item_path(cart_item), method: :delete, class: "btn btn-danger", "data-confirm" => "#{cart_item.item.name}を削除してもよろしいですか？" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

  <div class="row" style="margin-left: 0; margin-right: 0;">

    <%= link_to "買い物を続ける", top_path, class: "col-3 btn btn-primary h-75" %>

    <table class="col-4 ml-auto table table-bordered border-dark" style="margin-bottom: 0;">
      <tbody>
        <tr>
          <td class="table-active">合計金額</td>
          <td><%= total_price(@cart_items).to_s(:delimited) %></td>
        </tr>
      </tbody>
    </table>
  </div>

<div class="row mt-5">
<%= link_to "情報入力に進む", new_customer_order_path, class: "btn btn-success mx-auto col-3" %>
</div>

</div>