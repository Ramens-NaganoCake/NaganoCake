<div class="container">
  <div class="row">
    <div class="col-md-9 offset-md-2">
      <h1>商品一覧</h1>
      <p>全<%= @items.total_count %>件 中<%= @items.count %>件</p>
      <div class="d-flex flex-wrap">
      <% @items.each do |item| %>
        <span class="ml-3"><%= render 'each_item', item: item %></span>
      <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>