<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: "new_user", class: "new_user", local: true do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "名前" %>
    <%= f.label "(姓)" %>
    <%= f.text_field :last_name, autocomplete: "last_name" %>
    <%= f.label "(名)" %>
    <%= f.text_field :first_name, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label "フリガナ" %>
    <%= f.label "(セイ)" %>
    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
    <%= f.label "(メイ)" %>
    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postcode, autocomplete: "postcode" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label "電話番号" %>
    <%= f.text_field :phone, autocomplete: "phone" %>
  </div>

  <div class="field">
    <%= f.label "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>

<div>
  <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
</div>