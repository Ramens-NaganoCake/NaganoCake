<h3>配送先登録/一覧</h3>

<div class="new-deliver-destination">
  <%= form_with model: @deliver_destination, url: customer_deliver_destinations_path, local: true do |f| %>
    <%= render "customer/shared/error_messages_deliver_destination", model: f.object %>
    <div class="field">
      <%= f.label "郵便番号(ハイフンなし)"%>
      <%= f.text_field :postcode, autocomplete: "postcode" %>
    </div>
    <div class="field">
      <%= f.label "住所" %>
      <%= f.text_field :address, autocomplete: "address" %>
    </div>
    <div class="field">
      <%= f.label "宛名" %>
      <%= f.text_field :destination, autocomplete: "destination" %>
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>
</div>

<div class="deliver-destination-index">
  <table class="table">
    <thead>
      <tr>
        <td>郵便番号</td>
        <td>住所</td>
        <td>宛名</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @deliver_destinations.each do |deliver_destination| %>
        <tr>
          <td><%= deliver_destination.postcode %></td>
          <td><%= deliver_destination.address %></td>
          <td><%= deliver_destination.destination %></td>
          <td>
            <%= link_to "編集する", edit_customer_deliver_destination_path(deliver_destination), class: "btn btn-success" %>
            <%= link_to "削除する", customer_deliver_destination_path(deliver_destination), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>