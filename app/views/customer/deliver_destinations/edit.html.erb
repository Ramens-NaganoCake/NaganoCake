<h3>配送先編集</h3>

<div class="deliver-destination-edit">
  <%= form_with model: @deliver_destination, url: customer_deliver_destination_path(@deliver_destination), local: true do |f| %>
    <%= render "customer/shared/error_messages_deliver_destination", model: f.object %>
    <div class="field">
      <%= f.label "郵便番号(ハイフンなし)" %>
      <%= f.text_field :postcode, autocomplete: "postcode" %>
    </div>
    <div class="field">
      <%= f.label "住所" %>
      <%= f.text_field :address, autocomplete: "address" %>
    </div>
    <div class="field">
      <%= f.label "宛名" %>
      <%= f.text_field :destination, autocomplete: "destination" %>
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>
  <% end %>
</div>