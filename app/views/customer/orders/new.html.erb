<div class="container px-5 px-md-0 mt-5">
<div class="row" style="margin-left: 0; margin-right: 0;">
 <div class="col-xs-12">
  <h2>注文情報入力</h2>

  <%= form_with model: @order, url:confirm_customer_orders_path, local: true do |f| %> 
   <h4>支払方法</h4>
   <div class="col-xs-10 radio">
    <%= f.radio_button :payment, :"クレジットカード", checked: true %>
    <span>&nbspクレジットカード</span>
   </div>
   <div class="col-xs-10 radio">
    <%= f.radio_button :payment, :"銀行振込" %>
    <span>&nbsp銀行振込</span>
   </div> 
  
   <h4>お届け先</h4>
   
   <div class="col-xs-10 radio">
    <%= f.radio_button :addresses, "residence", checked: true %>
    <span>ご自身の住所</span><br>
    &nbsp&nbsp<%= "#{current_customer.postcode}""#{current_customer.address}" %><br>
    &nbsp&nbsp<%= "#{current_customer.first_name}""#{current_customer.last_name}" %>
   </div>
   
   <div class="col-xs-10 radio">
    <%= f.radio_button :addresses,  "registration"%>
    <span>&nbsp登録済住所から選択</span><br>
    <%= f.collection_select(:delivery_destination_id, @deliver_destinations, :id, :order_address) %>
   </div>
   
   <div class="new-address col-xs-12 radio">
    <%= f.radio_button :addresses, "new_address" %>
    <span>&nbsp新しいお届け先</span><br>
      <div class="field form-group col-xs-11">
       <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-10 control-label"  %>
       <%= f.text_field :postcode, class: "col-sm-3 form-control-static postal_code" %>
      </div>
      <div class="field form-group col-xs-11">
       <%= f.label :"住所", class: "col-sm-10 control-label"  %>
       <%= f.text_field :address, class: "col-sm-8 form-control-static address" %>
      </div>
      <div class="field form-group col-xs-11">
       <%= f.label :"宛名", class: "col-sm-10 control-label"  %>
       <%= f.text_field :destination, class: "col-sm-4 form-control-static" %>
      </div>
   </div>
   <div class="btns col-xs-8">
   <%= f.submit "確認画面へ進む", class: "btn btn-primary col-xs-5" %>
   </div>
  <% end %>

 </div>
</div>
</div>
