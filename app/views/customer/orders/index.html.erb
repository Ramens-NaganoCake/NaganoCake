<div class="container">
<h2 class="head-line">注文履歴一覧</h2>
        <table class="table table-hover table-bordered table-condensed border-dark">
          <thead>
            <tr class="info">
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
    		         <%= l order.created_at, format: :short %>
    		        </td>
    		        <td class="text-left">
    		         <%= order.postcode %><br>
    		         <%= order.address %><br>
    		         <%= order.destination %>
    		        </td>
    		        <td>
    		         <% order.item_orders.each do |item_order| %>
    		          <%= item_order.item.name %><br>
    	           <% end %>
    		        </td>
    		        <td class="text-right">
    		         <%= (total_price(order.item_orders) + order.postage).to_s(:delimited) %>円
    		        </td>
    		        
    		        <td>
    		         <%= order.order_status %>
    		        </td>
         	      <td>
       	         <%= link_to "表示する", customer_order_path(order), class: "btn btn-primary" %>
       	        </td>
              </tr>
            <% end %>
          </tbody>
        </table>
</div>