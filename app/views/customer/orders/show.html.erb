<div class="container">
<h2>注文履歴詳細</h2>
 <div class="row">
    <div class="col-xs-8">
      <h4>注文情報</h4>
  	    <table class="table table-bordered table-condensed">
          <tbody>
              <tr>
                <th class="info">注文日</th>
          	  <td class="text-left"><%= l @order.created_at, format: :short %></td>
              </tr>
              <tr>
              　<th class="info">配送先</th>
                <td class="text-left">
                  <%= @order.postcode %><br>
                  <%= @order.address %><br>
                  <%= @order.destination %>
                </td>
              </tr>
              <tr>
              　<th class="info">支払方法</th>
                <td class="text-left"><%= @order.payment %></td>
              </tr>
              <tr>
                <th class="info">ステータス</th>
                <td class="text-left"><%= @order.order_status %></td>
              </tr>
          </tbody>
        </table>
    </div>

    <div class="col-xs-3">
          <h4>請求情報</h4>
        	<table class="table table-bordered table-condensed">
            <tr>
              <th class="info">商品合計</th>
              <td class="col-xs-5"><%= @order.total_price.to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <th class="info">配送料</th>
              <td class="col-xs-5"><%= @order.postage.to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <th class="info">ご請求金額</th>
              <td class="col-xs-5"><%= (@order.total_price + @order.postage).to_s(:delimited) %>円</td>
            </tr>
        </table>
    </div>
    <div class="col-xs-7 order-details">
    	<h4>注文内容<h4>
        <table class="table table-bordered table-condensed">
        	<thead>
  	      <tr class="info">
  	      	<th>商品</th>
  	        <th>単価(税込)</th>
  	      	<th>個数</th>
  	      	<th>小計</th>
  	      </tr>
        	</thead>
        	<tbody>
        	<% @item_orders.each do |item_order| %>
            <tr>
  	        <td><%= item_order.item.name %></td>
  	        <td class="text-right"><%= item_order.tax_price.to_s(:delimited) %>円</td>
  	        <td class="text-right"><%= item_order.quantity %></td>
  	        <td class="text-right"><%= (item_order.tax_price*item_order.quantity).to_s(:delimited) %>円</td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>